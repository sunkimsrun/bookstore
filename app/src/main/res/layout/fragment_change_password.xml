<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingHorizontal="29dp"
    android:paddingVertical="30dp"
    android:background="@drawable/dialog_background"
    tools:context=".fragment.ChangePasswordFragment">

    <RelativeLayout
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_gray_rectangle">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/current_lock_icon"
            android:src="@drawable/ico_lock"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/current_password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/current_eye_icon"
            android:layout_toEndOf="@id/current_lock_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="password"
            android:background="@android:color/transparent"
            android:hint="current password"
            android:textAppearance="@style/edit_label"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="0dp"
            tools:ignore="TextContrastCheck"/>


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/current_eye_icon"
            android:src="@drawable/ico_eye_open"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_gray_rectangle">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/new_lock_icon"
            android:src="@drawable/ico_lock"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/new_password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/new_eye_icon"
            android:layout_toEndOf="@id/new_lock_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="password"
            android:background="@android:color/transparent"
            android:hint="new password"
            android:textAppearance="@style/edit_label"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="0dp"
            tools:ignore="TextContrastCheck"/>


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/new_eye_icon"
            android:src="@drawable/ico_eye_open"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_gray_rectangle">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/confirm_lock_icon"
            android:src="@drawable/ico_lock"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/confirm_eye_icon"
            android:layout_toEndOf="@id/confirm_lock_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="password"
            android:background="@android:color/transparent"
            android:hint="confirm password"
            android:textAppearance="@style/edit_label"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="0dp"
            tools:ignore="TextContrastCheck"/>


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/confirm_eye_icon"
            android:src="@drawable/ico_eye_open"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:id="@+id/confirm_button"
            android:layout_width="317dp"
            android:layout_height="55dp"
            android:background="@drawable/button"
            android:layout_centerInParent="true"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="confirm changes"
                android:textAppearance="@style/back"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="119dp"
            android:layout_height="17dp"
            android:text="Forgot Password?"
            android:textAppearance="@style/forgot_pass"
            android:gravity="center_horizontal|center_vertical"
            tools:ignore="TextContrastCheck" />


        <TextView
            android:id="@+id/reset_passw"
            android:layout_width="109dp"
            android:layout_height="17dp"
            android:text="Reset Password"
            android:textAppearance="@style/reset_passw"
            android:gravity="center_horizontal|center_vertical"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
</LinearLayout>