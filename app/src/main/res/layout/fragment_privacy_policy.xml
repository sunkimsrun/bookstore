<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_privacy_policy"
    android:padding="20dp"
    tools:context=".fragment.PrivacyPolicyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="-20dp"
                android:backgroundTint="@android:color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <!-- Divider -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:elevation="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/privacy_policy" />

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:letterSpacing="0.04"
                            android:text="BookLab Privacy Policy!"
                            android:textColor="@color/red"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="18dp"
                            android:background="#DADADA" />

                        <!-- Illustration -->

                        <TextView
                            android:id="@+id/booklab_pri"
                            android:layout_width="300dp"
                            android:layout_height="148dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:lineSpacingExtra="8sp"
                            android:text="@string/booklab_pri"
                            android:textAppearance="@style/booklab_pri" />

                        <TextView
                            android:id="@+id/information"
                            android:layout_width="300dp"
                            android:layout_height="960dp"
                            android:text="@string/information"
                            android:textAppearance="@style/information"
                            android:lineSpacingExtra="5sp"
                            android:gravity="center_vertical"
                            />

                    </LinearLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>