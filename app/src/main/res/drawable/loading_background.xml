<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer (Softer and Blurrier) -->
    <item android:left="0dp" android:top="20dp" android:right="0dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- 10% opacity for a softer blur effect -->
            <corners android:radius="20dp" /> <!-- Slightly rounded corners -->
        </shape>
    </item>

    <!-- Card Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>